<idea-plugin url="https://sqldalmaker.sourceforge.net//">
    <id>dal-mpe</id>
    <name>SQL DAL Maker</name>
    <category>Database</category>
    <version>1.324.2602</version>
    <vendor email="sqldalmaker@gmail.com" url="https://sqldalmaker.sourceforge.net">
        SQL DAL Maker
    </vendor>

    <!-- Target IntelliJ Platform (2022.2) -->
    <idea-version since-build="222.3345.118"/>

    <depends>com.intellij.modules.lang</depends>

    <description><![CDATA[
SQL DAL Maker is a generator of DTO, model, and DAO classes to access relational databases.
Target programming languages: PHP, Java, C++, Python, and Go. To generate the class, you declare it in XML meta-program.<br/>
<br/>
At the stage of code generation, the target database must exist and be available for JDBC connection.
Generated code is being synchronized with the current database schema using "live" JDBC metadata.
    ]]></description>

    <change-notes><![CDATA[
<ul>
<li>[+] toolWindow</li>
<li>[m] since IntelliJ Platform 2022.2</li>
</ul>
    ]]></change-notes>

    <!-- Legacy component tags must remain empty but kept for compatibility -->
<!--    <application-components></application-components>-->
<!--    <project-components></project-components>-->
<!--    <module-components></module-components>-->

    <extensions defaultExtensionNs="com.intellij">

        <!-- Modern Notification Group for NotificationGroupManager API -->
        <notificationGroup id="SDM"
                           displayType="BALLOON"
                           isLogByDefault="true"/>

        <!-- Register DAL file type -->
        <fileType name="com.sqldalmaker.intellij.ui.RootFileType"
                  implementationClass="com.sqldalmaker.intellij.ui.RootFileType"
                  fieldName="INSTANCE"
                  extensions="dal"/>

        <fileEditorProvider implementation="com.sqldalmaker.intellij.ui.RootFileEditorProvider"/>

        <editorTabTitleProvider
                implementation="com.sqldalmaker.intellij.ui.RootFileEditorTabTitleProvider"/>

        <psi.referenceContributor
                implementation="com.sqldalmaker.intellij.references.PsiReferenceContributorCommon"
                language="XML"/>

        <completion.contributor
                language="XML"
                implementationClass="com.sqldalmaker.intellij.references.CompletionContributorCommon"/>

        <toolWindow
                id="SDM"
                anchor="right"
                factoryClass="com.sqldalmaker.intellij.ui.JbToolWindowFactory"
                secondary="false"
        />

    </extensions>

</idea-plugin>
