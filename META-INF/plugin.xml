<idea-plugin url="http://sqldalmaker.sourceforge.net/">
    <id>dal-mpe</id>
    <name>SQL DAL Maker</name>
    <category>Database</category>
    <version>1.100.20200604</version>
    <vendor email="sqldalmaker@gmail.com"/>
    <!-- please see http://confluence.intellij.net/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="133.1885"/>

    <depends>com.intellij.modules.lang</depends>

    <description><![CDATA[
SQL DAL Maker is a generator of DTO and DAO classes to access relational databases. Target programming languages: PHP, Java, C++, Python, Ruby.<br/>
<br/>
To generate the class, you declare it in XML meta-program.<br/>
    ]]></description>

<!--    <change-notes>-->
<!--        <![CDATA[Added attribute 'pk' to define primary key manually in 'crud' and 'crud-auto']]></change-notes>-->

    <application-components>
    </application-components>

    <project-components>
    </project-components>

    <module-components>
    </module-components>

    <actions>

        <group class="com.sqldalmaker.intellij.SdmActionGroup" id="SdmActionGroup" text="Goto '*.dal'"
               description="Goto '*.dal'" icon="/img/sqldalmaker.png" popup="true">
            <add-to-group group-id="ToolbarFindGroup" anchor="first"/>
            <add-to-group group-id="FindMenuGroup" anchor="first"/>
        </group>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="com.sqldalmaker.intellij.ui.RootFileTypeFactory"/>
        <fileEditorProvider implementation="com.sqldalmaker.intellij.ui.RootFileEditorProvider"/>
        <editorTabTitleProvider implementation="com.sqldalmaker.intellij.ui.RootFileEditorTabTitleProvider"/>
        <psi.referenceContributor
                implementation="com.sqldalmaker.intellij.references.PsiReferenceContributorCommon"/>
        <completion.contributor language="XML"
                                implementationClass="com.sqldalmaker.intellij.references.CompletionContributorCommon"/>
    </extensions>

</idea-plugin>